root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,jsx,tsx,json,sol}]
indent_style = space
indent_size = 2

[*.{go,mod,sum}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{md,yml,yaml}]
indent_style = space
indent_size = 2